# EloInsight Game Sync Service Configuration

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/eloinsight?schema=public"

# Service Configuration
PORT=3002
NODE_ENV=development

# Chess.com API
CHESS_COM_BASE_URL="https://api.chess.com/pub"
CHESS_COM_RATE_LIMIT=300
CHESS_COM_RATE_WINDOW=60000

# Lichess API
LICHESS_BASE_URL="https://lichess.org/api"
LICHESS_RATE_LIMIT=15
LICHESS_RATE_WINDOW=1000

# Sync Configuration
SYNC_CRON="0 */6 * * *"
SYNC_DEFAULT_LOOKBACK_MONTHS=6
SYNC_MAX_GAMES_PER_FETCH=500

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000
RETRY_MULTIPLIER=2
